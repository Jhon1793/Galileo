<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textSize="46sp"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Ver Publicaciones"
        android:textColorHint="@color/white"
        android:id="@+id/btnPublicaicones"/>

    <Button
        android:id="@+id/btncrud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPublicaicones"
        android:layout_marginTop="61dp"
        android:hint="Ver Crud"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btncrudImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncrud"
        android:layout_marginTop="40dp"
        android:hint="Crud Imagenes"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btncrudFire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncrudImg"
        android:layout_marginTop="40dp"
        android:hint="Crud Firestorew"
        android:textColorHint="@color/white" />

</RelativeLayout>