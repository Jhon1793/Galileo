<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".ui.auth.Login">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/titulo"
            android:text="Logeo de usuarios"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/emaillog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/passwordlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emaillog"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword" />



            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordlog"
                android:layout_marginTop="12dp"
                android:onClick="buttonPress"
                android:text="Login" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button"
                android:layout_marginTop="12dp"
                android:text="Google" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="41dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/btnGoogle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/btnGoogle"
        android:layout_marginVertical="12dp"
        android:background="#222222"
        android:id="@+id/espacio1"/>

    <EditText
        android:id="@+id/ingNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/espacio1"
        android:hint="@string/numero_de_telefono"
        android:inputType="number" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingNumero"
        android:text="Ingresar #"
        android:id="@+id/btmnIngresoNumero"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:layout_above="@id/button2"
        android:text="No tienes cuenta?, Registrate con una nueva cuenta ..."/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="registrar"
        android:layout_alignParentBottom="true"
        android:text="Registro" />

</RelativeLayout>